# Application Configuration
PORT=3001
NODE_ENV=development
APP_NAME=FastX Courier
BASE_URL=http://localhost:3001
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=courier_service

# JWT Configuration
JWT_SECRET=fastx_courier_secret_key_2025_change_in_production
JWT_EXPIRATION=1h
JWT_REFRESH_SECRET=fastx_courier_refresh_secret_key_2025
JWT_REFRESH_EXPIRATION=7d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Email Configuration (NodeMailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=FastX Courier <noreply@fastxcourier.com>

# Pusher Configuration (Real-time notifications)
PUSHER_APP_ID=your_app_id
PUSHER_KEY=your_key
PUSHER_SECRET=your_secret
PUSHER_CLUSTER=ap2

# SMS Configuration
# Options: 'log' (dev mode), 'twilio', 'ssl-wireless', 'nexmo', 'generic'
SMS_PROVIDER=log
SMS_SENDER_ID=FastX

# Twilio Configuration (International)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# SSL Wireless Configuration (Bangladesh)
SSL_SMS_API_TOKEN=your_ssl_wireless_api_token
SSL_SMS_SID=your_ssl_wireless_sid
SSL_SMS_SENDER_ID=FastX

# Nexmo/Vonage Configuration
NEXMO_API_KEY=your_nexmo_api_key
NEXMO_API_SECRET=your_nexmo_api_secret
NEXMO_FROM_NAME=FastX

# Generic SMS API Configuration
SMS_API_URL=https://api.sms-gateway.com/send
SMS_API_KEY=your_sms_api_key

# OTP Configuration
OTP_EXPIRATION=300
OTP_LENGTH=6

# Payment Configuration
COD_PAYOUT_DELAY_DAYS=7
COD_FEE_PERCENTAGE=2

# Pricing Configuration
BASE_DELIVERY_FEE=50
PER_KG_FEE=20
EXPRESS_SURCHARGE=50
DISTANCE_FEE_PER_KM=5

# SLA Configuration
EXPRESS_SLA_HOURS=24
NORMAL_SLA_HOURS=72

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Admin 2FA
ADMIN_2FA_ENABLED=true
